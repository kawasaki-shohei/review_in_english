<div class="form-wrapper">
  <h1>Sign up</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-item">
      <%= f.text_field :name, placeholder: "Name", required: true %>
    </div>

    <div class="form-item">
      <%= f.email_field :email, placeholder: "Email Address", required: true %>
    </div>

    <div class="form-item">
      <% if @minimum_password_length %>
      <%= f.password_field :password, placeholder: "Password", required: true, autocomplete: "off" %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />

    </div>

    <div class="form-item">
      <%= f.password_field :password_confirmation, placeholder: "Password confirmation", required: true, autocomplete: "off" %>
    </div>

    <div class="button-panel">
      <%= f.submit "Sign up", class:"button", title: "Sign In" %>
    </div>

    <div class="form-footer">
      <%= render "devise/shared/links" %>
    </div>

  <% end %>

</div>
