<!DOCTYPE html>
<html>
  <head>
    <title>レビューinイングリッシュ</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="#">レビューinイングリッシュ</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <% if user_signed_in? %>
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to reviews_path, class: "nav-link" do %>
                  Timeline<span class="sr-only">(current)</span>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to "All", movies_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Reviewed", reviewed_movies_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Corrected",  corrected_review_path(current_user.id), class: "nav-link" %>
              </li>
            </ul>
            <ul class="navbar-nav navbar-right">
              <li class="nav-item">
                <%= link_to "#{current_user.name}さん", edit_user_registration_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "nav-link" %>
              </li>
            </ul>
          <% end %>
        </div>
      </div>
    </nav>


      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>


    <!-- Footer -->
    <footer class="py-5 bg-dark">
      <div class="container-fluid">
        <p class="m-0 text-center text-white">Copyright &copy; Your Website 2018</p>
      </div>
    </footer>

  </body>
</html>
